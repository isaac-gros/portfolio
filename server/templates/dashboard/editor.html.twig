{% extends 'base.html.twig' %}
{% block title %}Tableau de bord{% endblock %}

{% block body %}

{% include 'dashboard/navbar.html.twig' %}

<div class="container mt-3">
    <div class="row">
        <div class="col-12">
            <h1 class="h3">
                {{ formTitle }}
            </h1>
        </div>
        <div class="col-12 col-lg-8">
        {{ form_start(entityForm) }}

            {{ form_label(entityForm.base.title, 'Titre') }}
            {{ form_widget(entityForm.base.title) }}

            {{ form_label(entityForm.base.description, 'Description', { 
                'label_attr': {'class': 'mt-3'} 
            }) }}
            {{ form_widget(entityForm.base.description) }}

            {{ form_label(entityForm.base.content, 'Contenu', { 
                'label_attr': {'class': 'mt-3'} 
            }) }}
            {{ form_widget(entityForm.base.content, {
                id: 'editor'
            }) }}

            {% if entityType == 'project' %}
                {{ form_row(entityForm.name, {
                    label: 'Nom du projet'
                }) }}

                {{ form_row(entityForm.summary, {
                    label: 'Résumé'
                }) }}

                {{ form_row(entityForm.thumbnail, {
                    label: 'Image de prévisualisation'
                }) }}
            {% endif %}

            <button type="submit" class="btn btn-primary mt-3">Ajouter</button>
        {{ form_end(entityForm) }}
        </div>
    </div>
</div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('froala') }}
{% endblock %}